@model IEnumerable<WebApplication1.Models.ApplicationUser>
@{
    ViewBag.Title = "ManageUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Zarządzaj użytkownikami</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="box-title">
            <b>Dane użytkowników</b>
        </h3>
    </div>
    <div class="panel-body">
        <table class="table table-hover table-bordered table-condensed">
            <thead>
                <tr>
                    <td><b>Username</b></td>
                    <td><b>Email</b></td>
                    <td><b>Options</b></td>
                </tr>
            </thead>
            @foreach (var user in Model)
            {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                @Html.ActionLink("Edit ", "EditUser", new { id = user.Id })
                @Html.ActionLink("Delete ", "DeleteUser", new { id = user.Id })
            </td>
        </tr>

            }
        </table>
    </div>

    <div class="panel-footer">
        <p class="box-title"><b>Total Users till @String.Format("{0 : dddd, MMMM d, yyyy}", DateTime.Now)  : </b><span class="label label-primary">@Model.Count()</span></p>
    </div>
</div>
